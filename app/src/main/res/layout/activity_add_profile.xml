<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/blue"
    >

    <ScrollView
        style="@style/FontTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food">

            </ImageView>

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="170dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profile">
            </ImageView>

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="240dp"
                android:backgroundTint="@color/white"
                android:text="@string/cancel_button"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />


            <EditText
                android:id="@+id/name_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="250dp"
                android:background="@null"
                android:fontFamily="roboto"
                android:hint="Add Name"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="14dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_gravity="center"
                android:src="@drawable/calendar"
                >
            </ImageView>

            <EditText
                android:id="@+id/dob"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="textStart"
                android:fontFamily="roboto"
                android:inputType="text"
                android:hint="Date of Birth: MM/DD/YYYY"
                android:textColor="@color/blue"
                android:textSize="14dp"
                android:background="@null"
                />

        </LinearLayout>

            <LinearLayout
                style="@style/FontTheme"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/measure"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/measure"
                    >
                </ImageView>

                <EditText
                    android:id="@+id/height"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="textStart"
                    android:fontFamily="roboto"
                    android:inputType="text"
                    android:hint="Height in cm"
                    android:textColor="@color/blue"
                    android:textSize="14dp"
                    android:background="@null"
                    />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textAlignment="textStart"
                    android:fontFamily="roboto"
                    android:inputType="text"
                    android:hint="Weight in kg"
                    android:textColor="@color/blue"
                    android:textSize="14dp"
                    android:background="@null"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/notes"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notes"
                    >
                </ImageView>

                <EditText
                    android:id="@+id/notesText"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="textStart"
                    android:fontFamily="roboto"
                    android:inputType="text"
                    android:hint="Enter relevant notes e.g. medical history"
                    android:textColor="@color/blue"
                    android:textSize="14dp"
                    android:background="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/allergens"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/allergen"
                    >
                </ImageView>

                <AutoCompleteTextView
                    android:id="@+id/allergy_entry"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="Add allergens"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="textStart"
                    android:fontFamily="roboto"
                    android:inputType="text"
                    android:textColor="@color/blue"
                    android:textSize="14dp"
                    android:background="@null"
                    >
                </AutoCompleteTextView>

                <Button
                    android:id="@+id/add_allergy"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/food"
                    android:text="add"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_profile"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/food"
                    android:text="@string/save_button"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    />

                <Button
                    android:id="@+id/cancel_profile"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/blue"
                    android:text="@string/cancel_button"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>